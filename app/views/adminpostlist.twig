{% extends 'layout.twig' %}

{% block title %}
     Articles à modifier
{% endblock %}

{% block content %}
<h2 class="text-center my-5">Articles à modifier ou à supprimer</h2>
<div class="mb-5">
    <img src="public/images/lettre.jpg" alt="letters" width="50%" class="img-fluid rounded mx-auto my-auto d-block shadow">
</div>

<div class="row">
    
        {% for post in posts %}
        <div class="col col-md-6 mb-3">
            <div class="card mx-2 mb-2 h-100" >
                <div class="card-body ">
                    <h3 class="card-title">{{post.getTitle}}</h3>
                    <h6 class="card-subtitle mb-2 text-mutetd">le : {{post.getFrench_creation_date}}</h6>
                    <p class="card-text">{{post.getChapo}}</p>
                    <p class="card-footer">Par : {{post.getUsername}}</p>
                    <a href="index.php?action=updatepost&id={{post.getIdentifier}}" class="btn card-link">Modifier</a>
                    <a href="index.php?action=deletepost&id={{post.getIdentifier}}" onclick="return confirm('Êtes-vous certain de vouloir effacer définitivement cet article ?')" 
                    class="btn card-link">Supprimer</a>
                    
                </div>
               </div >
        </div>
        
         {% endfor %}
   
</div>



{% endblock %}