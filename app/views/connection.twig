{% extends 'layout.twig' %}

{% block title %}
     Connexion
{% endblock %}
{% import 'forms.twig' as forms %}

{% block content %}

<h3 class="my-5 text-center">Connectez-vous :</h3> <br>
<div class="row justify-content-center">
     <div class="col-11 col-md-4 shadow mb-5 pt-3">
          <form action="index.php?action=logon" method="post">
               <div class="row mb-2">
                    {{ forms.input ('username', 'Votre pseudo *', username, {class: 'col-12'}) }}
               </div>
               <div class="row mb-2">
                    {{ forms.input ('password', 'Votre mot de passe *', password,  {class: 'col-12', type: 'password'}) }}
               </div>
              <div><p>* Tous les champs sont requis</p></div>
               <div class="form-group mb-5">
                    <button type="submit" class="btn">Envoyer</button>
               </div>
          </form>
          <p class=" text-center">
               <strong>Pas encore de compte?</strong><br>
               <a href="index.php?action=register" class="btn text-center mt-3">Inscrivez-vous !</a>
          </p>
     </div>
</div>

{% endblock %}

