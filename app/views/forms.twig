{% macro input(name, label) %}
<div class="form-group">
    <label for="{{name}}"> {{label}} </label>
    <input type="text" class="form-control" id="{{ name }}" name="{{ name }}">
</div>
{% endmacro %}

{% macro textarea(name, label, cols, rows) %}
<div class="form-group">
    <label for="{{name}}"> {{label}} </label>
    <textarea class="form-control" id="{{ name }}" name="{{ name }}" cols=" {{cols}} " rows="{{rows}}"></textarea>
</div>
{% endmacro %}